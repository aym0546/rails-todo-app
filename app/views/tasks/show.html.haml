.container
  .card
    .task_detail
      .task_detail_header
        %h2= @task.title
        - if user_signed_in? && current_user == @task.user
          .dropdown
            = image_tag 'dot.png', class: 'dropbtn'
            .dropdown_content
              = link_to 'Edit', edit_task_path(@task)
              = link_to 'Delete', task_path(@task), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' }

      .eyecatch
        = image_tag 'eyecatch.png'
      .task_detail_content
        %p= @task.content
